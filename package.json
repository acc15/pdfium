{
  "name": "@hyzyla/pdfium",
  "version": "1.0.6",
  "description": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && tsc && cp -r src/vendor dist",
    "clean": "rm -rf dist",
    "lint": "eslint ./src",
    "format": "prettier ./src --write",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hyzyla/pdfium"
  },
  "author": "Yevhenii Hyzyla",
  "license": "MIT",
  "files": [
    "dist/**/*"
  ],
  "dependencies": {
    "sharp": "^0.33.4"
  },
  "devDependencies": {
    "@octokit/rest": "^19.0.13",
    "@types/axios": "^0.14.0",
    "@types/jest": "^29.5.4",
    "@types/jest-image-snapshot": "^6.2.0",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "axios": "^1.4.0",
    "eslint": "^8.48.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "jest": "^29.6.4",
    "jest-image-snapshot": "^6.2.0",
    "prettier": "^3.3.2",
    "tar": "^6.1.15",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "unzipper": "^0.10.14"
  },
  "peerDependenciesMeta": {
    "sharp": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "========== Tools ==========": "",
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/recommended",
      "plugin:import/typescript"
    ],
    "overrides": [],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "import"
    ],
    "rules": {
      "import/order": [
        "error",
        {
          "groups": [
            "builtin",
            "external",
            "internal",
            "parent",
            "sibling",
            "index"
          ],
          "pathGroups": [
            {
              "pattern": "./vendor/**",
              "group": "external",
              "position": "after"
            }
          ],
          "newlines-between": "always",
          "alphabetize": {
            "order": "asc",
            "caseInsensitive": true
          }
        }
      ]
    },
    "ignorePatterns": [
      "src/vendor/**/*"
    ],
    "settings": {
      "import/resolver": {
        "typescript": true,
        "node": true
      }
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 120
  }
}
